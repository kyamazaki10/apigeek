extends ../layout

block append head
    script(src='/scripts/vendor/require.js' data-main='/scripts/apps.js')

block content
    .container

        .page-header
            h1= title

        .content
            form(class='form-inline')
                .form-group
                    label(for='email') Email:
                    input(type='text' class='form-control')
                .form-group
                    label(for='expand') Expand:
                    select(class='form-control expand')
                        option(value='true') true
                        option(value='false' selected) false
                button(id='list-apps' class='btn btn-primary submit') Submit

            h4.result Result
            .results

            pre
                code(class='result-raw')